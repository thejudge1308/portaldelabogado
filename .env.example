# .env.example - Copia este archivo a .env y configura tus valores
# ===========================
# Configuración de la Aplicación
# ===========================
PORT=8080
MODE=production
STATIC_DIR=./portaldelabogado
DOMAIN=portaldelabogado.com

# ===========================
# Base de Datos PostgreSQL
# ===========================
POSTGRES_DB=portal_abogados
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_seguro_aqui
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===========================
# Redis Cache
# ===========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================
# Email SMTP (Opcional)
# ===========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu_app_password
SMTP_FROM=Portal de Abogados <noreply@portaldelabogado.com>

# ===========================
# JWT y Seguridad
# ===========================
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambialo
ENCRYPTION_KEY=tu_clave_de_encriptacion_32_caracteres

# ===========================
# APIs Externas (Opcional)
# ===========================
GOOGLE_MAPS_API_KEY=tu_google_maps_api_key
STRIPE_SECRET_KEY=tu_stripe_secret_key
